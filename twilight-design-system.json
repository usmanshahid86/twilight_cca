{
  "name": "Twilight Token Auction Design System",
  "version": "2.0.0",
  "description": "Comprehensive design system extracted from Twilight Token Auction DEX application",
  "designLanguage": {
    "theme": "Dark, futuristic, privacy-focused DeFi interface",
    "personality": "Playful yet professional, high-tech, mysterious",
    "principles": [
      "Dark mode first",
      "Cyan accent as primary interactive element",
      "Smooth animations and micro-interactions",
      "Responsive and mobile-first",
      "3D tilt effects for depth",
      "Decrypted text animations for intrigue"
    ]
  },
  "colors": {
    "primary": {
      "50": "#ecfeff",
      "100": "#cffafe",
      "200": "#a5f3fc",
      "300": "#67e8f9",
      "400": "#22d3ee",
      "500": "#06b6d4",
      "600": "#0891b2",
      "700": "#0e7490",
      "800": "#155e75",
      "900": "#164e63",
      "950": "#083344"
    },
    "accent": {
      "cyan": {
        "light": "#67e8f9",
        "base": "#22d3ee",
        "dark": "#06b6d4",
        "hover": "#67e8f9",
        "text": "#22d3ee",
        "border": "#22d3ee",
        "background": {
          "opacity-20": "rgba(34, 211, 238, 0.2)",
          "opacity-10": "rgba(34, 211, 238, 0.1)",
          "opacity-30": "rgba(34, 211, 238, 0.3)"
        }
      }
    },
    "neutral": {
      "black": "#000000",
      "white": "#ffffff",
      "gray": {
        "50": "#f9fafb",
        "100": "#f3f4f6",
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827",
        "950": "#030712"
      }
    },
    "semantic": {
      "success": {
        "base": "#10b981",
        "light": "#34d399",
        "dark": "#059669",
        "500": "#10b981"
      },
      "error": {
        "base": "#ef4444",
        "light": "#f87171",
        "dark": "#dc2626"
      },
      "warning": {
        "base": "#f59e0b",
        "light": "#fbbf24",
        "dark": "#d97706"
      },
      "info": {
        "base": "#3b82f6",
        "light": "#60a5fa",
        "dark": "#2563eb"
      }
    },
    "background": {
      "primary": "#000000",
      "secondary": "#111827",
      "card": {
        "base": "#1f2937",
        "gradient": {
          "from": "#111827",
          "to": "#1f2937",
          "direction": "to-br",
          "class": "bg-gradient-to-br from-gray-900 to-gray-800"
        },
        "subtle": {
          "from": "rgba(31, 41, 55, 0.5)",
          "to": "transparent",
          "class": "bg-gradient-to-r from-gray-800/50 to-transparent"
        }
      },
      "input": "#1f2937",
      "button": {
        "secondary": "#1f2937"
      }
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#9ca3af",
      "tertiary": "#6b7280",
      "accent": "#22d3ee",
      "muted": "#4b5563",
      "labels": "#9ca3af",
      "values": {
        "primary": "#ffffff",
        "accent": "#22d3ee"
      }
    },
    "border": {
      "primary": "#374151",
      "secondary": "#1f2937",
      "accent": "#22d3ee",
      "hover": "#22d3ee",
      "card": "#374151",
      "input": "#374151",
      "inputFocus": "#22d3ee"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Poppins", "system-ui", "-apple-system", "BlinkMacSystemFont", "'Segoe UI'", "Roboto", "'Helvetica Neue'", "Arial", "sans-serif"],
      "mono": ["'SF Mono'", "Monaco", "'Cascadia Code'", "'Roboto Mono'", "Consolas", "'Courier New'", "monospace"]
    },
    "fontSize": {
      "xs": ["0.75rem", { "lineHeight": "1rem" }],
      "sm": ["0.875rem", { "lineHeight": "1.25rem" }],
      "base": ["1rem", { "lineHeight": "1.5rem" }],
      "lg": ["1.125rem", { "lineHeight": "1.75rem" }],
      "xl": ["1.25rem", { "lineHeight": "1.75rem" }],
      "2xl": ["1.5rem", { "lineHeight": "2rem" }],
      "3xl": ["1.875rem", { "lineHeight": "2.25rem" }],
      "4xl": ["2.25rem", { "lineHeight": "2.5rem" }],
      "5xl": ["3rem", { "lineHeight": "1" }],
      "6xl": ["3.75rem", { "lineHeight": "1" }]
    },
    "fontWeight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em",
      "uppercase": "0.05em"
    },
    "hierarchy": {
      "h1": {
        "sizes": ["text-3xl", "sm:text-4xl", "md:text-5xl"],
        "weight": "bold",
        "spacing": "mb-2 sm:mb-4"
      },
      "h2": {
        "sizes": ["text-lg", "sm:text-xl"],
        "weight": "semibold",
        "spacing": "mb-4 sm:mb-6"
      },
      "subtitle": {
        "sizes": ["text-base", "sm:text-lg", "md:text-xl"],
        "color": "text-gray-400"
      },
      "label": {
        "sizes": ["text-xs", "sm:text-sm"],
        "color": "text-gray-400",
        "weight": "normal",
        "spacing": "mb-1 sm:mb-2",
        "uppercase": true,
        "tracking": "tracking-wide"
      },
      "value": {
        "large": {
          "sizes": ["text-2xl", "sm:text-3xl", "md:text-4xl"],
          "weight": "bold"
        },
        "medium": {
          "sizes": ["text-xl", "sm:text-2xl"],
          "weight": "bold"
        },
        "small": {
          "sizes": ["text-xs", "sm:text-sm"],
          "weight": "semibold"
        }
      },
      "body": {
        "sizes": ["text-sm", "sm:text-base"],
        "color": "text-gray-400"
      }
    }
  },
  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "responsive": {
      "padding": {
        "card": {
          "mobile": "p-3",
          "tablet": "sm:p-4",
          "desktop": "md:p-5",
          "large": "p-4 sm:p-5 md:p-6"
        },
        "section": {
          "mobile": "px-4 py-6",
          "tablet": "sm:px-6 sm:py-12"
        },
        "container": {
          "mobile": "px-4",
          "tablet": "sm:px-6"
        }
      },
      "gap": {
        "small": {
          "mobile": "gap-2",
          "tablet": "sm:gap-4",
          "desktop": "md:gap-6"
        },
        "medium": {
          "mobile": "gap-4",
          "tablet": "sm:gap-6"
        },
        "large": {
          "mobile": "gap-4",
          "tablet": "sm:gap-6",
          "desktop": "mb-8 sm:mb-12"
        }
      },
      "margin": {
        "section": {
          "mobile": "mb-8",
          "tablet": "sm:mb-12"
        },
        "element": {
          "small": "mb-2 sm:mb-3",
          "medium": "mb-4 sm:mb-6"
        }
      }
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "base": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
    "glow": {
      "cyan": "0 0 20px rgba(34, 211, 238, 0.3)",
      "cyan-lg": "0 0 40px rgba(34, 211, 238, 0.5)"
    }
  },
  "transitions": {
    "duration": {
      "fast": "150ms",
      "base": "200ms",
      "slow": "300ms",
      "slower": "500ms",
      "slowest": "2000ms"
    },
    "easing": {
      "ease-in": "cubic-bezier(0.4, 0, 1, 1)",
      "ease-out": "cubic-bezier(0, 0, 0.2, 1)",
      "ease-in-out": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "properties": {
      "colors": "color 200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "background": "background-color 200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "border": "border-color 200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "all": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "transform": "transform 0.3s ease-out"
    }
  },
  "animations": {
    "fadeInUp": {
      "name": "fade-in-up",
      "duration": "0.6s",
      "easing": "ease-out",
      "fillMode": "forwards",
      "keyframes": {
        "0%": {
          "opacity": "0",
          "transform": "translateY(20px)"
        },
        "100%": {
          "opacity": "1",
          "transform": "translateY(0)"
        }
      }
    },
    "fadeIn": {
      "name": "fade-in",
      "duration": "0.6s",
      "easing": "ease-out",
      "fillMode": "forwards",
      "keyframes": {
        "0%": {
          "opacity": "0"
        },
        "100%": {
          "opacity": "1"
        }
      }
    },
    "marquee": {
      "name": "marquee",
      "duration": "15s",
      "easing": "linear",
      "iteration": "infinite",
      "keyframes": {
        "0%": {
          "transform": "translateX(0)"
        },
        "100%": {
          "transform": "translateX(-50%)"
        }
      }
    },
    "pulse": {
      "name": "pulse",
      "duration": "2s",
      "easing": "cubic-bezier(0.4, 0, 0.6, 1)",
      "iteration": "infinite"
    },
    "decryptedText": {
      "speed": "45ms",
      "maxIterations": 1,
      "characters": "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()"
    }
  },
  "effects": {
    "tilt": {
      "container": {
        "maxTilt": 2,
        "scale": 1.01,
        "perspective": 1000,
        "transition": "transform 0.3s ease-out"
      },
      "card": {
        "maxTilt": 3,
        "scale": 1.01
      },
      "block": {
        "maxTilt": 4,
        "scale": 1.02
      }
    },
    "gradient": {
      "card": "bg-gradient-to-br from-gray-900 to-gray-800",
      "block": "bg-gradient-to-r from-gray-800/50 to-transparent",
      "banner": "bg-gradient-to-r from-cyan-400/20 via-cyan-400/10 to-cyan-400/20"
    },
    "hover": {
      "border": "hover:border-cyan-400 transition-colors",
      "background": "hover:bg-cyan-400 hover:text-black transition-colors",
      "text": "hover:text-white transition-colors"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "zIndex": {
    "base": 0,
    "dropdown": 1000,
    "sticky": 1020,
    "fixed": 1030,
    "modal-backdrop": 1040,
    "modal": 1050,
    "popover": 1060,
    "tooltip": 1070
  },
  "components": {
    "card": {
      "base": {
        "background": "bg-gradient-to-br from-gray-900 to-gray-800",
        "border": "border border-gray-700",
        "borderRadius": "rounded-lg",
        "padding": {
          "mobile": "p-3",
          "tablet": "sm:p-4",
          "desktop": "md:p-5",
          "large": "p-4 sm:p-5 md:p-6"
        },
        "height": "h-full",
        "display": "flex flex-col"
      },
      "stats": {
        "extends": "card.base",
        "cursor": "cursor-pointer",
        "padding": "p-4 sm:p-6"
      },
      "block": {
        "background": "bg-gradient-to-r from-gray-800/50 to-transparent",
        "border": "border border-gray-700",
        "borderRadius": "rounded-lg",
        "padding": {
          "x": "px-1.5 sm:px-2 md:px-2.5",
          "y": "py-4 sm:py-6 md:py-8"
        },
        "hover": "hover:border-cyan-400 transition-colors",
        "display": "flex flex-col items-center text-center",
        "cursor": "cursor-pointer"
      }
    },
    "button": {
      "primary": {
        "background": "bg-cyan-400",
        "color": "text-black",
        "hover": "hover:bg-cyan-300",
        "padding": {
          "x": "px-3 sm:px-4",
          "y": "py-2.5 sm:py-3"
        },
        "borderRadius": "rounded-lg",
        "fontWeight": "font-semibold",
        "fontSize": "text-sm sm:text-base",
        "transition": "transition-colors",
        "width": "w-full"
      },
      "secondary": {
        "background": "transparent",
        "color": "text-cyan-400",
        "border": "border border-cyan-400",
        "hover": {
          "background": "hover:bg-cyan-400",
          "color": "hover:text-black"
        },
        "padding": {
          "x": "px-3 sm:px-4",
          "y": "py-1.5 sm:py-2"
        },
        "borderRadius": "rounded",
        "fontSize": "text-sm sm:text-base",
        "transition": "transition-colors"
      },
      "icon": {
        "background": "bg-gray-800",
        "border": "border border-gray-700",
        "borderRadius": "rounded-lg",
        "padding": "p-1.5 sm:p-2",
        "hover": "hover:border-cyan-400 transition-colors"
      }
    },
    "input": {
      "base": {
        "background": "bg-gray-800",
        "border": "border border-gray-700",
        "borderRadius": "rounded-lg",
        "padding": {
          "x": "px-3 sm:px-4",
          "y": "py-2.5 sm:py-3",
          "withIcon": "pl-7 sm:pl-8"
        },
        "fontSize": "text-sm sm:text-base",
        "focus": {
          "outline": "focus:outline-none",
          "border": "focus:border-cyan-400"
        },
        "transition": "transition-colors",
        "width": "w-full",
        "placeholder": "placeholder-gray-500"
      },
      "withIcon": {
        "extends": "input.base",
        "paddingLeft": "pl-7 sm:pl-8"
      }
    },
    "badge": {
      "live": {
        "background": "bg-green-500",
        "color": "text-white",
        "padding": "px-1.5 sm:px-2 py-0.5",
        "borderRadius": "rounded-full",
        "fontSize": "text-xs",
        "fontWeight": "font-semibold",
        "transform": "uppercase"
      }
    },
    "slider": {
      "container": {
        "background": "bg-gray-800",
        "border": "border border-gray-700",
        "borderRadius": "rounded-lg",
        "padding": "p-1",
        "display": "flex items-center gap-2"
      },
      "button": {
        "base": {
          "padding": "px-3 sm:px-4 py-1.5 sm:py-2",
          "fontSize": "text-xs sm:text-sm",
          "fontWeight": "font-medium",
          "borderRadius": "rounded-md",
          "transition": "transition-all duration-200"
        },
        "active": {
          "background": "bg-cyan-400",
          "color": "text-black",
          "shadow": "shadow-lg"
        },
        "inactive": {
          "color": "text-gray-400",
          "hover": "hover:text-white"
        }
      }
    },
    "banner": {
      "announcement": {
        "background": "bg-gradient-to-r from-cyan-400/20 via-cyan-400/10 to-cyan-400/20",
        "border": "border-b border-cyan-400/30",
        "padding": "py-2",
        "overflow": "overflow-hidden",
        "text": {
          "color": "text-cyan-400",
          "fontSize": "text-sm sm:text-base",
          "fontWeight": "font-medium",
          "padding": "px-4"
        }
      }
    },
    "header": {
      "background": "bg-black",
      "border": "border-b border-gray-800",
      "padding": "py-4",
      "container": {
        "maxWidth": "max-w-7xl",
        "margin": "mx-auto",
        "padding": "px-4 sm:px-6",
        "display": "flex items-center justify-between"
      },
      "logo": {
        "display": "flex items-center gap-2",
        "icon": {
          "size": "w-5 h-5 sm:w-6 sm:h-6",
          "color": "text-cyan-400"
        },
        "text": {
          "fontSize": "text-base sm:text-xl",
          "fontWeight": "font-semibold"
        }
      },
      "nav": {
        "display": "flex items-center",
        "gap": {
          "mobile": "gap-4",
          "tablet": "sm:gap-8"
        },
        "link": {
          "display": {
            "mobile": "hidden",
            "tablet": "sm:block"
          },
          "color": "text-gray-300",
          "hover": "hover:text-white",
          "fontSize": "text-sm sm:text-base",
          "transition": "transition-colors"
        }
      }
    },
    "footer": {
      "background": "bg-black",
      "border": "border-t border-gray-800",
      "padding": "py-4 sm:py-6",
      "margin": "mt-8 sm:mt-12",
      "container": {
        "maxWidth": "max-w-7xl",
        "margin": "mx-auto",
        "padding": "px-4 sm:px-6"
      },
      "text": {
        "color": "text-gray-500",
        "fontSize": "text-xs sm:text-sm"
      },
      "link": {
        "color": "text-gray-400",
        "hover": "hover:text-white",
        "fontSize": "text-xs sm:text-sm",
        "transition": "transition-colors"
      }
    }
  },
  "layout": {
    "container": {
      "maxWidth": "max-w-7xl",
      "margin": "mx-auto",
      "padding": {
        "mobile": "px-4",
        "tablet": "sm:px-6"
      }
    },
    "grid": {
      "stats": {
        "columns": {
          "mobile": "grid-cols-1",
          "tablet": "sm:grid-cols-2",
          "desktop": "lg:grid-cols-3"
        },
        "gap": "gap-4 sm:gap-6"
      },
      "main": {
        "columns": {
          "mobile": "grid-cols-1",
          "desktop": "lg:grid-cols-2"
        },
        "gap": "gap-4 sm:gap-6",
        "alignment": "items-stretch"
      },
      "swapStats": {
        "columns": "grid-cols-2",
        "gap": "gap-3 sm:gap-4"
      },
      "auctionBlocks": {
        "top": {
          "columns": "grid-cols-2",
          "gap": "gap-2 sm:gap-4 md:gap-6"
        },
        "bottom": {
          "columns": "grid-cols-1",
          "gap": "gap-2 sm:gap-4 md:gap-6"
        }
      }
    },
    "spacing": {
      "section": {
        "vertical": "py-6 sm:py-12",
        "horizontal": "px-4 sm:px-6"
      },
      "betweenSections": "mb-8 sm:mb-12"
    }
  },
  "patterns": {
    "responsive": {
      "text": {
        "pattern": "text-{size} sm:text-{size} md:text-{size}",
        "examples": [
          "text-xs sm:text-sm",
          "text-lg sm:text-xl",
          "text-2xl sm:text-3xl md:text-4xl"
        ]
      },
      "spacing": {
        "pattern": "{property}-{size} sm:{property}-{size} md:{property}-{size}",
        "examples": [
          "p-3 sm:p-4 md:p-5",
          "gap-2 sm:gap-4 md:gap-6",
          "mb-2 sm:mb-3"
        ]
      }
    },
    "interaction": {
      "hover": {
        "border": "hover:border-cyan-400 transition-colors",
        "background": "hover:bg-cyan-400 hover:text-black transition-colors",
        "text": "hover:text-white transition-colors"
      },
      "focus": {
        "input": "focus:outline-none focus:border-cyan-400 transition-colors"
      }
    },
    "animation": {
      "scrollReveal": {
        "component": "AnimatedSection",
        "types": ["fade-in-up", "fade-in"],
        "delays": [0, 100, 150, 200],
        "threshold": 0.1
      },
      "tilt": {
        "component": "TiltCard",
        "hook": "useTilt",
        "configurations": {
          "container": { "maxTilt": 2, "scale": 1.01 },
          "card": { "maxTilt": 3, "scale": 1.01 },
          "block": { "maxTilt": 4, "scale": 1.02 }
        }
      },
      "decryptedText": {
        "component": "DecryptedText",
        "speed": 45,
        "maxIterations": 1,
        "onComplete": "callback function"
      }
    }
  },
  "states": {
    "auction": {
      "pre-auction": {
        "banner": "Don't miss the only chance to get allocation for untraceable bitcoin privacy token",
        "views": ["placeholder message"]
      },
      "auction-live": {
        "banner": "Twilight Token Auction is Live!",
        "views": ["Auction", "MyBid", "MyPosition"]
      },
      "post-auction": {
        "banner": "Auction has ended. Twilight tokens are now tradeable!",
        "views": ["Swap", "MyPosition"]
      }
    }
  },
  "iconography": {
    "library": "lucide-react",
    "sizes": {
      "small": "w-3 h-3 sm:w-4 sm:h-4",
      "medium": "w-4 h-4 sm:w-5 sm:h-5",
      "large": "w-5 h-5 sm:w-6 sm:h-6"
    },
